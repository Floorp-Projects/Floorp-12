{
  "typeAcquisition": {
    "enable": true,
    "include": ["vite/client"]
  },
  "compilerOptions": {
    "paths": {
      "@types-gecko/*": ["../../@types/gecko/*"],
      "@core/*": ["./core/*"]
    },
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolvePackageJsonExports": false,
    "isolatedModules": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client"]
  },
  "exclude": ["_dist"]
}
